# Telegram Bot Token from @BotFather
BOT_TOKEN=""

# Bot mode: "polling" or "webhook"
# For local development, "polling" is easier to set up.
BOT_MODE="polling"

# PostgreSQL database connection URL
# Example: "postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
# For Docker Compose (local postgres container): "postgresql://postgres:postgres@postgres:5432/new_year_bot"
# For external database: "postgresql://user:password@external-host:5432/database_name"
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/new_year_bot"

# List of user IDs that are considered admins (JSON array)
# Example: "[123456789]"
BOT_ADMINS="[]"

# Optional: Allowed update types (JSON array). Leave empty to receive all updates.
# Example: '["message", "callback_query"]'
BOT_ALLOWED_UPDATES="[]"

# --- Optional settings ---

# "trace", "debug", "info", "warn", "error", "fatal", "silent"
LOG_LEVEL="info"

# Enable debug mode
DEBUG="false"

# --- Redis settings for BullMQ job queue ---
REDIS_HOST="localhost"
REDIS_PORT="6379"

# --- Webhook specific settings ---
# Required only if BOT_MODE is "webhook"

# The public URL for your bot's webhook. Use ngrok for local development.
# Example: "https://your-domain.com/bot"
# BOT_WEBHOOK=""

# A secret token to secure your webhook
# BOT_WEBHOOK_SECRET=""

# The host and port your local server will listen on
# SERVER_HOST="0.0.0.0"
# SERVER_PORT="8080"

# --- ElevenLabs TTS Configuration ---
ELEVENLABS_API_KEY=""
ELEVENLABS_VOICE_ID=""
ELEVENLABS_API_SETTINGS='{}'

# --- Video Processing Configuration ---
# Path to the source video template file
SOURCE_VIDEO_PATH="./assets/source-video.mp4"
# Timecode where the generated audio should be inserted (format: H:MM:SS:FF)
AUDIO_INSERT_TIMECODE="1:00:28:21"